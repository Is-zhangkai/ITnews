<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WriteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/write_up"
            android:layout_width="match_parent"
            android:layout_height="165dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/write_topBar">
                <ImageView
                    android:id="@+id/edit_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">
                </ImageView>
                <Button
                    android:id="@+id/edit_post"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="发 布"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_circle"></Button>


            </RelativeLayout>
            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="60dp"
                android:layout_below="@id/write_topBar"
                android:hint="请输入标题"
                android:textSize="24dp"
                android:textColor="#000000"
                android:maxLength="12"
                android:textStyle="bold">
            </EditText>
            <RelativeLayout
                android:id="@+id/edit_tagBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edit_title">
                <Button
                    android:id="@+id/edit_tag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="选择新闻类型"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/white_circle">
                </Button>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F2F2"
            android:layout_below="@id/write_up">
            <EditText
                android:hint="输入新闻内容"
                android:paddingStart="10dp"
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_circle"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:minLines="10"
                android:maxLines="15">
            </EditText>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/edit_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edit_content">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>