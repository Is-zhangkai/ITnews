<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/details_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/person_background"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/details_photo"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:background="@color/blueviolet"/>
            <TextView
                android:id="@+id/details_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/details_photo"
                android:layout_marginTop="13dp"
                android:layout_marginStart="24dp"
                android:text="我是作者"
                android:textColor="#666666"
                android:padding="3dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/details_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/details_photo"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_marginStart="24dp"
                android:text="这是我是作者的简介信息"
                android:padding="3dp"
                android:maxLines="1"
                android:layout_toLeftOf="@id/details_btn"
                android:layout_marginEnd="6dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/details_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:text="关注"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:letterSpacing="0.5"
                android:background="@drawable/btn_focus_fill"/>

        </RelativeLayout>
    <TextView
        android:id="@+id/tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是一个标题"
        android:textSize="20sp"
        android:textColor="#666666"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginHorizontal="24dp" />
        <TextView
            android:id="@+id/details_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:text="diughgdvwbbsdbjbsjbbsjakbvdksbv"
            android:textSize="17sp"
            android:letterSpacing="0.1" />


</LinearLayout>
