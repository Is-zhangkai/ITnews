<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/paper_circle">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/item_paper_image"
                android:src="@drawable/itnews"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp">
            </ImageView>
            <TextView
                android:id="@+id/item_paper_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻标题"
                android:layout_toRightOf="@id/item_paper_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"
                android:id="@+id/item_paper_tag"
                android:layout_below="@id/item_paper_title"
                android:layout_toRightOf="@id/item_paper_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
